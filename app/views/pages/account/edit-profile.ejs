<div id="edit-profile" v-cloak>
  <div class="container">
    <h1>Actualizar información de la empresa</h1>
    <hr/>
    <ajax-form action="updateProfile" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="full-name">Nombre de la empresa</label>
            <input class="form-control" id="full-name" name="full-name" type="text"  :class="[formErrors.nombre ? 'is-invalid' : '']" v-model.trim="formData.nombre" placeholder="Sturgis P. Sturgeon">
            <div class="invalid-feedback" v-if="formErrors.nombre">Por favor ingrese el nombre de la empresa.</div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="email-address">Correo electrónico</label>
            <input class="form-control" id="email-address" name="email-address" type="email"  :class="[formErrors.correo ? 'is-invalid' : '']" v-model.trim="formData.correo" placeholder="sturgeon@example.com">
            <div class="invalid-feedback" v-if="formErrors.correo">Por favor ingrese una dirección de correo electrónico válida.</div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="text-danger" v-if="cloudError === 'emailAlreadyInUse'">Ya existe una empresa asociada a este correo electrónico.</p>
          <p class="text-danger" v-else-if="cloudError">Ha ocurrido un error inesperado mientras se ejecutaba la acción. Por favor verifique su información e intente de nuevo, o <a href="/contact">contacte con nosotros</a> si el error persiste.</p>
        </div>
        <div class="col-sm-6">
          <div class="form-group text-right">
            <a class="btn btn-outline-info" href="/account">Cancelar</a>
            <ajax-button type="submit" :syncing="syncing" class="btn btn-dark">Guardar cambios</ajax-button>
          </div>
        </div>
      </div>
    </ajax-form>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
